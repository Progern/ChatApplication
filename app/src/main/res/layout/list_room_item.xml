<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Test room #1" />

    <TextView
        android:id="@+id/unread_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/room_title"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circle_text_view_bg"
        android:padding="3dp"
        android:textColor="@color/primary_text"
        android:visibility="invisible"
        tools:text="12" />

    <TextView
        android:id="@+id/room_creation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unread_messages"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#BDBDBD"
        android:textStyle="italic"
        tools:text="Created at January 12, 2017" />

</RelativeLayout>